
<h1><%= portfolio.name %></h1>
<h3>Cash: $<%= portfolio.cash %></h3>
<br>

<% transactions.forEach(transaction => { %>
    <strong><%= transaction.ticker %></strong>
    <br>
    Purchase price: $<%= transaction.price %>
    <br>
    Quantity: <%= transaction.quantity %>



    <form action="/transaction/sell" method="POST">
        <input type="text" name="ticker" value='<%= transaction.ticker %>'>
        <input type="text" name="price" value='<%= transaction.price %>'>
        <input type="text" name="quantity" value= <%= transaction.quantity %>>
        <input type="text" name="currentUser" class="sellUser" value=1 >
        <input type="text" name="transactionId" value='<%= transaction.id %>' >
        <input type="submit" name="buy" value='Sell'>
    </form>
    <br>

<% }) %>

<form action="/portfolio/delete" method="POST">
    <input type="text" name="currentUser" class="sellUser" value='' >
    <input type="submit" name="delete" value='Delete Profile' onclick="localStorage.clear()">
</form>

<script>
    const inputs = document.getElementsByClassName("sellUser")
    for (let i = 0; i < inputs.length; i++){
        inputs[i].value = currentUser
    }

</script>